<div class="col-md-8 offset-md-2">
    <div class="card">
        <div class="card-header">
            <h1>ENCRIPTACIÃ“N AES</h1>
        </div>
        <div class="card-body">
            
            {{#if objects}}
            <ul class="list-group ">
                {{#each objects}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>Nombre: {{nombre}}</div>
                    <a href="/delete-object/{{@key}}" class="btn btn-danger">Delete</a>
                    <a href="/download-object/{{@key}}" class="btn btn-success">Download</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No hay archivos subidos.</p>
            {{/if}}
            
        </div>
        <div class="card-footer">
            <form action="/new-file" method="POST" encType="multipart/form-data">
               
                <div class="form-group">
                    <input type="file" id="archivo" name="archivo" placeholder="" class="form-control">
                </div>

                <button class="btn btn-primary btn-block">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>