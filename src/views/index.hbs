<div class="col-md-8 offset-md-2">
    <div class="card">
        <div class="card-header">
            <h1>ENCRIPTACIÃ“N AES</h1>
        </div>
        <div class="card-body">
            {{#if contacts}}
            <ul class="list-group ">
                {{#each contacts}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{firstname}} 
                    {{lastname}} /
                    {{email}} /
                    {{phone}}

                    <a href="/delete-contact/{{@key}}" class="btn btn-danger">Delete</a>

                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No contacts yet.</p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-file" method="POST">
               
                <div class="form-group">
                    <input type="file" id="archivo" name="archivo" placeholder="" class="form-control">
                </div>

                <button class="btn btn-primary btn-block">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>